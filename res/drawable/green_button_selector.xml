<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
                android:dither="true">
            <corners android:radius="4dp"/>

            <solid android:color="@android:color/holo_green_dark"/>

            <padding
                    android:left="4dp"
                    android:right="4dp"
                    />

            <stroke
                    android:color="@android:color/holo_green_light"
                    android:width="1dp"
                    />

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape
                android:dither="true">
            <corners android:radius="4dp"/>

            <solid android:color="@android:color/holo_green_dark"/>

            <padding
                    android:left="4dp"
                    android:right="4dp"
                    />

            <stroke
                    android:color="@android:color/darker_gray"
                    android:width="2dp"
                    />

        </shape>
    </item>

    <item>
        <shape
                android:dither="true">
            <corners android:radius="4dp"/>

            <solid android:color="@android:color/holo_green_dark"/>

            <padding
                    android:left="4dp"
                    android:right="4dp"
                    />

            <stroke
                    android:color="@android:color/holo_green_light"
                    android:width="1dp"
                    />

        </shape>
    </item>

</selector>